		{
			"appId": "Tour",
			"name": "Tour",
			"type": "web",
			"details": {
				"url": "$moduleRoot/ui-components/Tour/tour.html"
			},
			"hostManifests": {
				"Finsemble": {
					"window": {
						"options": {
							"resizable": false,
							"autoShow": true,
							"alwaysOnTop": false,
							"addToWorkspace": true
						},
						"top": "center",
						"left": "center",
						"width": 800,
						"height": 600
					},
					"component": {
						"displayName": "Take a Tour",
						"preload": "$moduleRoot/preloads/zoom.js"
					},
					"foreign": {
						"services": {
							"windowService": {
								"allowSnapping": true,
								"allowGrouping": true,
								"allowTabbing": true,
								"allowAutoArrange": true,
								"allowMinimize": true
							}
						},
						"components": {
							"App Launcher": {
								"launchableByUser": true
							},
							"Window Manager": {
								"alwaysOnTopIcon": false,
								"FSBLHeader": {
									"hideMaximize": true
								},
								"persistWindowState": true,
								"title": "Take a Tour"
							}
						}
					}
				}
			},
			"version": "1.0.0",
			"publisher": "Cosaic",
			"icons": [
				{
					"src": "$moduleRoot/ui-components/Tour/take-a-tour.svg"
				}
			]
